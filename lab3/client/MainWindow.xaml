<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Client" Height="374" Width="400">
    <Grid Margin="0,0,0,-6">
        <TextBox Name="ServerAddressTextBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" Text="127.0.0.1"/>
        <Button Content="Connect" HorizontalAlignment="Left" Margin="220,40,0,0" VerticalAlignment="Top" Width="75" Click="ConnectButton_Click"/>
        <TextBox Name="ChatTextBox" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Height="200" Width="360" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        <TextBox Name="MessageTextBox" HorizontalAlignment="Left" Height="23" Margin="90,295,0,0" VerticalAlignment="Top" Width="200"/>
        <Button Content="Send" HorizontalAlignment="Left" Margin="295,297,0,0" VerticalAlignment="Top" Width="75" Click="SendMessageButton_Click"/>
        <TextBox x:Name="NickNameTextBox" HorizontalAlignment="Left" Height="23" Margin="10,38,0,0" VerticalAlignment="Top" Width="200" Text="My Name is"/>
        <ComboBox x:Name="ActiveClientsBox" HorizontalAlignment="Left" Margin="10,294,0,0" VerticalAlignment="Top" Width="75" Height="24"/>
    </Grid>
</Window>
